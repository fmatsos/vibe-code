{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-4">
    <a href="{{ path('task_new') }}" class="btn btn-primary mb-4">New Task</a>
    <table class="table w-full">
        <thead>
        <tr>
            <th>Title</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Category</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.title }}</td>
                <td>{{ task.dueDate|date('Y-m-d') }}</td>
                <td>{{ task.status }}</td>
                <td>{{ task.category }}</td>
                <td class="flex gap-2">
                    <a href="{{ path('task_edit', {id: task.id}) }}" class="btn btn-xs">Edit</a>
                    <form method="post" action="{{ path('task_delete', {id: task.id}) }}" onsubmit="return confirm('Delete?');">
                        <button class="btn btn-xs btn-error">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No tasks found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
